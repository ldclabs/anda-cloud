{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "ESNext.AsyncIterable"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["@types/node"],
    "paths": {
      "@ldclabs/anda_x402": ["../../../ts/anda_x402/src/index.ts"]
    }
  },
  "include": ["app.ts", "dev.ts"]
}
